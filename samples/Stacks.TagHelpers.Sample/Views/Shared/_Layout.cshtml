<!DOCTYPE html>
<html lang="en-us">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stacks.TagHelpers.Sample</title>


    <link rel="stylesheet" href="https://unpkg.com/@@stackoverflow/stacks/dist/css/stacks.min.css">
    @RenderSection("head", required: false);
</head>

<body class="theme-system">
    <div class="bg-black-050 ps-fixed h64 t0 l0 r0 z-nav-fixed bb bc-black-3 js-stacks-topbar print:d-none">
        <div class="grid ai-center px16 h100 mx-auto wmx12 sm:jc-space-between">
            <a class="grid--cell js-logo" href="~/">
                <s-svg name="LogoGlyphMd" class="native" />
            </a>
            <a class="grid--cell fc-black-300 ml-auto sm:d-none" title="Stack Overflow" href="https://stackoverflow.com">
                <s-svg name="LogoGlyphSm" />
            </a>

            <a class="grid--cell fc-black-300 ml12 sm:d-none" title="Stacks on GitHub" href="https://github.com/StackExchange/Stacks">
                <s-svg name="Github" class="w24 h24" />
            </a>

            <a class="grid--cell fc-black-300 ml12 sm:d-none" title="Stacks Template on Codepen" href="https://codepen.io/pen?template=PMRpVb&editors=1000">
                <svg aria-hidden="true" class="svg-icon iconCodepen" width="24" height="24" viewBox="0 0 18 18"><path d="M12.67 8.17l-2.98-2v-3.2l5.38 3.6-2.4 1.6zM13.9 9l1.73-1.15v2.3L13.9 9zm-4.2 2.82l2.98-2 2.4 1.62-5.38 3.59v-3.2zm-4.36-2l2.98 2v3.2l-5.38-3.58 2.4-1.61zM4.1 9l-1.73 1.15v-2.3L4.1 9zm4.2-2.82l-2.98 2-2.4-1.62L8.3 2.97v3.2zm.7 4.45L6.57 9 9 7.37 11.43 9 9 10.63zm7.99-4.19l-.01-.05-.01-.04-.02-.05-.02-.03a.6.6 0 0 0-.02-.05l-.02-.03a.69.69 0 0 0-.15-.17L16.7 6h-.02L9.4 1.11a.69.69 0 0 0-.77 0L1.3 5.99h-.02c0 .02-.02.02-.03.03a.81.81 0 0 0-.12.13.69.69 0 0 0-.03.04l-.02.03-.02.05-.02.03-.02.05v.04L1 6.44v.03a.7.7 0 0 0-.01.1v4.87a.7.7 0 0 0 0 .09l.01.03.01.05.01.04.02.05.02.03a.51.51 0 0 0 .07.12.53.53 0 0 0 .08.1c.02 0 .03.02.04.03l.03.02h.02l7.3 4.88a.69.69 0 0 0 .77 0l7.31-4.87h.02c0-.02.02-.02.03-.03a.72.72 0 0 0 .04-.04l.02-.02a.62.62 0 0 0 .13-.19l.02-.03a.6.6 0 0 0 .02-.05v-.04l.02-.05v-.03a.7.7 0 0 0 .01-.1V6.57a.7.7 0 0 0 0-.09l-.01-.03z" /></svg>
            </a>

            <button class="s-btn__unset c-pointer grid--cell fc-black-300 ml12 sm:d-none js-darkmode-btn" title="Toggle dark mode">
                <svg aria-hidden="true" class="svg-icon iconDarkMode" width="24" height="24"><path d="M18.925 4.075c4.1 4.1 4.1 10.75 0 14.85s-10.75 4.1-14.85 0-4.1-10.75 0-14.85 10.75-4.1 14.85 0zM17.51 17.51a8.5 8.5 0 000-12.02L5.49 17.51a8.5 8.5 0 0012.02 0z" /></svg>
            </button>
        </div>
    </div>

    <div class="grid mx-auto w100 wmx12">
        <div class="grid--cell fl-shrink0 ws2 md:w-auto md:d-none print:d-none js-navigation">
            <div class="overflow-y-scroll overflow-x-hidden bg-white z-nav py12 fs-body1 ps-fixed wmn2 t64 b0 sm:w100 sm:pb0">
                <div class="d-none sm:d-block">
                    <div class="grid fd-column ai-center">
                        {% if site-navigation %}
                        <div class="s-navigation s-navigation__wrap mx8 mb12 jc-center">
                            {% assign slug = page.url | replace:'/',' ' | truncatewords: 2 | remove:'...' %}

                            {% for section in site-navigation.sections %}
                            {% assign url = section.url | replace:'/',' ' | truncatewords: 2 | remove:'...' %}
                            <a class="s-navigation--item{% if url == slug %} is-selected{% endif %}" href="{{ section.url }}">{{ section.title }}</a>
                            {% endfor %}
                        </div>
                        {% endif %}
                        <div class="grid gs16 ai-center fw-wrap mx8">
                            <a class="grid--cell fc-black-300" href="https://stackoverflow.com/">
                                {% icon "LogoGlyphSm" %}
                            </a>

                            <a class="grid--cell fc-black-300" href="https://github.com/StackExchange/Stacks">
                                {% icon "GitHub", "", "24" %}
                            </a>

                            <a class="grid--cell fc-black-300" title="Stacks Template on Codepen" href="https://codepen.io/pen?template=PMRpVb&editors=1000">
                                <svg aria-hidden="true" class="svg-icon iconCodepen" width="24" height="24" viewBox="0 0 18 18"><path d="M12.67 8.17l-2.98-2v-3.2l5.38 3.6-2.4 1.6zM13.9 9l1.73-1.15v2.3L13.9 9zm-4.2 2.82l2.98-2 2.4 1.62-5.38 3.59v-3.2zm-4.36-2l2.98 2v3.2l-5.38-3.58 2.4-1.61zM4.1 9l-1.73 1.15v-2.3L4.1 9zm4.2-2.82l-2.98 2-2.4-1.62L8.3 2.97v3.2zm.7 4.45L6.57 9 9 7.37 11.43 9 9 10.63zm7.99-4.19l-.01-.05-.01-.04-.02-.05-.02-.03a.6.6 0 0 0-.02-.05l-.02-.03a.69.69 0 0 0-.15-.17L16.7 6h-.02L9.4 1.11a.69.69 0 0 0-.77 0L1.3 5.99h-.02c0 .02-.02.02-.03.03a.81.81 0 0 0-.12.13.69.69 0 0 0-.03.04l-.02.03-.02.05-.02.03-.02.05v.04L1 6.44v.03a.7.7 0 0 0-.01.1v4.87a.7.7 0 0 0 0 .09l.01.03.01.05.01.04.02.05.02.03a.51.51 0 0 0 .07.12.53.53 0 0 0 .08.1c.02 0 .03.02.04.03l.03.02h.02l7.3 4.88a.69.69 0 0 0 .77 0l7.31-4.87h.02c0-.02.02-.02.03-.03a.72.72 0 0 0 .04-.04l.02-.02a.62.62 0 0 0 .13-.19l.02-.03a.6.6 0 0 0 .02-.05v-.04l.02-.05v-.03a.7.7 0 0 0 .01-.1V6.57a.7.7 0 0 0 0-.09l-.01-.03z" /></svg>
                            </a>

                            <button class="s-btn__unset c-pointer grid--cell fc-black-300 js-darkmode-btn" title="Toggle dark mode">
                                <svg aria-hidden="true" class="svg-icon iconDarkMode" width="24" height="24"><path d="M18.925 4.075c4.1 4.1 4.1 10.75 0 14.85s-10.75 4.1-14.85 0-4.1-10.75 0-14.85 10.75-4.1 14.85 0zM17.51 17.51a8.5 8.5 0 000-12.02L5.49 17.51a8.5 8.5 0 0012.02 0z" /></svg>
                            </button>
                        </div>
                    </div>
                </div>

                @{
                    //TODO super hack!
                    var directory = new ValueTuple<string, string[]>[] {
                        ("Components", new[] { "Index", "Avatar", "Badge", "Banner", "Breadcrumbs", "Button", "Modal", "Popover", "Svg" })
                    };
                }

                <ul id="nav" class="list-reset">
                    @foreach (var directorySection in directory)
                    {
                        <li class="mb16">
                            <div class="px16 py6 fw-bold tt-uppercase fs-fine mt16">
                                @directorySection.Item1
                            </div>
                            <ul class="list-reset">
                                @foreach (var link in directorySection.Item2)
                                {
                                    //TODO haaaaaaack
                                    var isIndex = link == "Index";
                                    var pageLink =  isIndex ? "" : "components/" + link;
                                    var currentPage = Context.Request.Path.Value.Replace("/components/", "").Trim('/');
                                    var isCurrentPage = isIndex ? currentPage == "" || currentPage == "index" : link.Equals(currentPage, StringComparison.OrdinalIgnoreCase);
                                    <li>
                                        <a class="grid jc-space-between ai-center py6 px12 s-link s-link__muted mx4 @(isCurrentPage ? "bg-orange-400 bar-pill fc-white" : "")" href="~/@pageLink.ToLower()">
                                            <span class="grid--cell">
                                                @link
                                            </span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>


        <div id="content" class="grid fl1 ps-relative t64 py24 pl48 pr16 md:pl24 sm:pl16 sm:pr16">
            <div class="grid--cell fl1 ws1">
                <h1 class="stacks-h1">@ViewData["Title"]</h1>
                <p class="stacks-copy stacks-copy__lg">
                    @ViewData["Description"]
                </p>

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/@@stackoverflow/stacks/dist/js/stacks.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
